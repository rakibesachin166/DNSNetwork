<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
               <RelativeLayout
                   android:paddingVertical="03dp"
                   android:id="@+id/toolbarRelative_id"
                   android:layout_width="match_parent"
                   android:background="@color/primary"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/nametextid"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@drawable/rectangle"
                       android:backgroundTint="@color/primary"
                       android:fontFamily="@font/lato"
                       android:paddingStart="15dp"
                       android:paddingTop="20dp"
                       android:paddingBottom="10dp"
                       android:text="Hi,  Sachin Rakibe "
                       android:layout_toLeftOf="@+id/logoutbtn"
                       android:textColor="@color/white"
                       android:textSize="24sp" />
                   <ImageButton
                       android:id="@+id/logoutbtn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@+id/nametextid"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentEnd="true"
                       android:layout_marginEnd="20dp"
                       android:backgroundTint="@color/primary"
                       android:foregroundGravity="center"
                       android:src="@drawable/logout"
                       tools:ignore="SpeakableTextPresentCheck" />

               </RelativeLayout>
         <LinearLayout
            android:id="@+id/linearinputbox_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonsubmitcomplaint_id"
            android:layout_below="@+id/toolbarRelative_id"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            >

            <TextView
                android:id="@+id/first_name___last_na"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_complainttype_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/text_input"
                android:paddingVertical="12dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/first_name___last_na_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descriptionedttext_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/text_input"
                android:textColor="@color/black"
                android:padding="10dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2dp"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/buttonsubmitcomplaint_id"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/primary"
            android:gravity="center"
            android:paddingHorizontal="100dp"
            android:paddingVertical="05dp"
            android:text="Submit"
            android:textColor="@color/lightGrey"
            android:textSize="18sp"
            android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />
    </RelativeLayout>

</FrameLayout>